<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MfinMobileApp.Views.CustomerDetail"
             Title="CustomerDetail">
  <ScrollView>
    <StackLayout Padding="10">
      <Label Text="{Binding Customer.name}" FontSize="40"/>
      <Label Text="{Binding Customer.id}"/>
      <Label Text="{Binding Customer.phone}"/>
            <Label Text="{Binding Customer.location}"/>
            <Button Text="Call" Pressed="Button_Pressed" />
        </StackLayout>
  </ScrollView>
</ContentPage>